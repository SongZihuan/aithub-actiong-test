name: Test Windows SDK
permissions:
  contents: read
    
on:
  push:
    branch:
      - main
      - branch

jobs:
  sdk-install:
    runs-on: windows-latest

    steps:
      - name: Set up Windows SDK
        uses: GuillaumeFalourd/setup-windows10-sdk-action@v2.4
        with:
          sdk-version: 26100

      - name: Print Windows SDK Path
        run: echo "Windows SDK Path: ${{ env.WINDOWS_SDK_PATH }}"

      - name: List SDK Directory
        run: |
          dir "C:\Program Files (x86)\Windows Kits\10"
          dir "C:\Program Files\Windows Kits\10"
